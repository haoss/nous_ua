doctype

html(lang="ru")
  
  -var active = 'Корзина' //активный пункт меню, список в header.jade
  -var pageTitle = 'Корзина' + ' - Nous' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header-inside
    
    .header-separator

    // Content
    .content
      .container
        
        .content__wrapper
          
          .cart
            .row
              .col-md-2
                
                .cart__step
                  .cart__step-block.is-active
                    strong 01
                    span Моя корзина 
                    i
                  .cart__step-block.is-active
                    strong 02
                    span Оформление покупки
                    i
                  .cart__step-block
                    strong 03
                    span Заказ оформлен
                  
                
              .col-md-10
                
                .cart__body
                  .h1 Оформление покупки
                  
                  .cart__form
                    form(action="#!")
                      .row
                        .col-md-6
                          fieldset
                            legend Ваши данные:
                            .form-group
                              label.hidden Имя
                              input(type="text" placeholder="Имя").form-control
                            .form-group
                              label.hidden Фамилия
                              input(type="text" placeholder="Фамилия").form-control
                            .form-group
                              label.hidden Телефон
                              input(type="text" placeholder="+38 (___) ___ __ __").form-control.phone-mask
                          fieldset
                            legend На кого оформляете заказ:
                            .form-group.form-group--order
                              div
                                .radio
                                  label
                                    input(type='radio' name="radio1111" checked)
                                    span На себя
                              div
                                .radio
                                  label
                                    input(type='radio' name="radio1111" checked)
                                    span Юридическое лицо
                            
                          fieldset
                            legend Комментарий к заказу
                            .form-group
                              label.hidden Комментарий
                              textarea.form-control(placeholder="Введите комментарий")
                        .col-md-6
                          fieldset
                            legend Доставка:
                            .form-group.form-group--delivery
                              div
                                .radio
                                  label
                                    input(type='radio' name="radio111111" checked)
                                    span Новая почта
                              div
                                .radio
                                  label
                                    input(type='radio' name="radio111111" checked)
                                    span Курьером
                            .form-group
                              select.selectric
                                option(disabled) Ваш город
                                option Харьков
                                option Киев
                                option Днепр
                                option Хмельницкий
                                option Мукачево
                            .form-group
                              select.selectric
                                option(disabled) Выберите отделение новой почты
                                option Отделение 1
                                option Отделение 2
                                option Отделение 3 
                                option Отделение 4
                                option Отделение 5
                            
                          fieldset
                            legend Оплата:
                            .form-group
                              .radio
                                label
                                  input(type='radio' name="radio1" checked)
                                  span Оплата картой на сайте
                              .radio
                                label
                                  input(type='radio' name="radio1")
                                  span Наложенный платёж
                              .radio
                                label
                                  input(type='radio' name="radio1")
                                  span Безналичный расчет
                          fieldset
                            .form-group
                              .checkbox
                                label
                                  input(type='checkbox' name="checkbox1")
                                  span Не перезванивать
                              .checkbox
                                label
                                  input(type='checkbox' name="checkbox2")
                                  span Соглашаюсь с уcловиями 
                                  a(href="#!" target="_blank") Публичной оферты
                            
                            button(type="button").btn.btn--border Подтвердить заказ
          

      +subscriptionForm
    
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    //- script(src="./js/libs.js")
    include ./_include/_footer-js
    script(src="./js/common.js")
    

  
